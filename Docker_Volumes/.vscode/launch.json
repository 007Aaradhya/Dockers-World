{
    "configurations": [
        {
            "name": "Docker: Python Debug",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/App",
                    "remoteRoot": "/app/App"
                }
            ]
        },
        {
            "name": "Docker: Node.js Debug",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "timeout": 30000
        }
    ]
}
